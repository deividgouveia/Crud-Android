public void atualizarListaDeContatos () {

        LinearLayout LinerLayoutRecords = (LinearLayout)
                findViewById (R.id.objetosContatos);
        LinerLayoutRecords.removeAllViews ();

        Lista <Contato> estudantes = novo ContatoController (este) .listarContatos ();

        se (students.size ()> 0) {

             para (contato obj: estudantes) {

                 int id = obj.getId (); // chave pk da tabela
                 String nome = obj.getNome ();
                 String email = obj.getEmail ();

                 String textViewContents = nome + "-" + email;

                 TextView textViewContatoItem = new TextView (this);
                 textViewContatoItem.setPadding (0, 10, 0, 10);
                 textViewContatoItem.setText (textViewContents);
                 textViewContatoItem.setTag (Integer.toString (id));

                 LinerLayoutRecords.addView (textViewContatoItem);
                 textViewContatoItem.setOnClickListener ((View.OnClickListener) novo RetrieveOnLongClickListener ());

             }

             }

             outro {

                 TextView locationIntem = new TextView (this);
                 localizaçãoIntem.setPadding (8, 8, 8, 8);
                 locationIntem.setText ("nenhum contato cadastrado");

                 LinerLayoutRecords.addView (locationIntem);
             }
        }
    }
